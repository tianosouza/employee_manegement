<div class="flex flex-col gap-3max-w-sm mx-auto bg-steel-blue p-9 rounded-lg">
  <h2 class="text-center p-2">Login</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-5">
    <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow-sm bg-gray-50 border border-gray-300
      text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5 dark:placeholder-gray-400
      dark:shadow-sm-light", placeholder: "name@email.com", required: true
    %>
  </div>

  <div class="mb-5">
    <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow-sm bg-gray-50 border border-gray-300
      text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5 dark:placeholder-gray-400
      dark:shadow-sm-light", placeholder: "password"
    %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center h-5 mb-5">
      <%= f.check_box :remember_me, class: "w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300
        dark:border-gray-600 dark:focus:ring-blue-600" 
      %>
      <%= f.label :remember_me, class: "ms-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    </div>
  <% end %>

  <div class="flex justify-center items-center gap-3">
    <%= f.submit "Log in", class: "text-white cursor-pointer bg-lapis-blue hover:bg-blue-800
      font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-lapis-blue dark:hover:bg-blue-700" 
    %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 
      focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-gray-600 
      dark:hover:bg-gray-700 dark:focus:ring-gray-800" 
    %>
  </div>
<% end %>
</div>