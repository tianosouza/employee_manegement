<div class="flex flex-col justify-center items-center">
  <div class="flex flex-col gap-3max-w-sm mx-auto bg-steel-blue p-9 rounded-lg">  
    <h2 class="text-center p-2">Edit <%= resource_name.to_s.humanize %></h2>  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>  
      <div class="mb-5">
        <label><%= :image_url %></label>
        <div class="flex items-center gap-2 shadow-sm bg-gray-50 border border-gray-300
          text-gray-900 text-sm rounded-lg focus:border-blue-500 w-full p-2.5 dark:placeholder-gray-400
          dark:shadow-sm-light">
          <%= f.label :image_url, class: "border-r-4 pr-5 border-steel-blue block text-sm font-medium text-gray-900" do %>
            Select file
            <%= f.file_field :image_url, autofocus: true, autocomplete: "image_url", class: "hidden" %>
          <% end %>
          <span>Nenhum arquivo selecionado</span>
        </div>
      </div>
  
      <div class="mb-5">
        <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= f.email_field :email, autofocus: true, class:"shadow-sm bg-gray-50 border border-gray-300
              text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5 dark:placeholder-gray-400
              dark:shadow-sm-light", placeholder: "youremail@email.com"
        %>
      </div>
  
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
  
      <div class="flex gap-2 items-center">
        <div class="mb-5">
          <div class="flex flex-col">
            <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"shadow-sm bg-gray-50 border border-gray-300
              text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5 dark:placeholder-gray-400
              dark:shadow-sm-light", placeholder: "password" 
            %>
          </div>
        </div>
        <div class="mb-5">
          <div class="flex flex-col">
            <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"shadow-sm bg-gray-50 border border-gray-300
              text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5 dark:placeholder-gray-400
              dark:shadow-sm-light", placeholder: "password-cofirmation"
            %>
          </div>
        </div>
      </div>
  
      <div class="mb-5">
        <%= f.label :current_password, class: "block mb-2 text-sm font-medium text-gray-900" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class:"shadow-sm bg-gray-50 border border-gray-300
          text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5 dark:placeholder-gray-400
          dark:shadow-sm-light", placeholder: "password-cofirmation"
        %>
      </div>
  
      <div class="flex gap-2 items-center">
        <div class="actions">
          <%= f.submit "Update", class: "text-white cursor-pointer bg-lapis-blue hover:bg-blue-800
        font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-lapis-blue dark:hover:bg-blue-700" %>
        </div>
        <%= link_to "Back", :back, class: "text-white bg-gray-700 hover:bg-gray-800 focus:ring-4
          focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-gray-600
          dark:hover:bg-gray-700 dark:focus:ring-gray-800"
        %>
        <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
      </div>  
    <% end %>  
  </div>
</div>
